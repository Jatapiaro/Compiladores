%{
    #include "mytokens.h"
%}

/* Regular definitions */

digit [0-9]
lowercase_letter [a-z]
uppercase_letter [A-Z]
text {lowercase_letter}{uppercase_letter}


/* Patterns and actions */
%%


")" return CLOSE_PARENTHESIS;
"," return COMA;
"." return DOT;
"(" return OPEN_PARENTHESIS;
"_" return UNDERSCORE;
":-" return RULE;

{lowercase_letter}+[A-Za-z]* return PREDICATE_NAME;
_?[A-Z]+ return VARIABLE;

[ \t\n] ;

%%


int yywrap(void) {
    return 1;
}
